    </ResourceDictionary>
  </ContentPage.Resources>

  <ContentPage.Content>
    <ListView x:Name="listView" ItemsSource="{Binding OpenAlerts}">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <Grid BackgroundColor="{Binding Level, Converter={StaticResource LevelToColorConverter}}">
              <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
              </Grid.ColumnDefinitions>
              <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
              </Grid.RowDefinitions>
              <Label Text="{Binding Subject}"></Label>
              <Label Text="{Binding Source}" FontSize="10" Grid.Row="1" />
              <Label Text="{Binding Timestamp, StringFormat='{0:dd/MM/yy HH:mm:ss zzz}'}" FontSize="10" Grid.Row="1" Grid.Column="1" />
            </Grid>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>


